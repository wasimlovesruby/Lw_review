<div class="panel panel-default">
  <div class="panel-body">
    <div class="row">
      <div class="col-md-4">
      <%= image_tag @movie.image.url(:medium) %>
        <div class="table-responsive">
          <table class="table">
            <tbody>
              <tr>
                <td><strong>Title:</strong></td>
                <td><%= @movie.title %></td>
              </tr>
              <tr>
                <td><strong>Description:</strong></td>
                <td><%= @movie.description %></td>
              </tr>
              <tr>
                <td><strong>Gender:</strong></td>
                <td><%= @movie.gender %></td>
              </tr>
              <tr>
                <td><strong>Movie length:</strong></td>
                <td><%= @movie.movie_length %></td>
              </tr>
              <tr>
                <td><strong>Director:</strong></td>
                <td><%= @movie.director %></td>
              </tr>
              <tr>
                <td><strong>Music:</strong></td>
                <td><%= @movie.Music %></td>
              </tr>
              <tr>
                <td><strong>Screen play:</strong></td>
                <td><%= @movie.Screen_play %></td>
              </tr>
              <tr>
                <td><strong>Story:</strong></td>
                <td><%= @movie.Story %></td>
              </tr>
              <tr>
                <td><strong>Rating:</strong></td>
                <td><%= @movie.rating %></td>
              </tr>
            </tbody>
          </table>
          <%= link_to "write a review", new_movie_review_path(@movie) %>
        </div>
      </div>
      <div class="col-md-7 col-md-offset-1">
        <h1 class="review_title"><%= @movie.title %></h1>
        <p><%= @movie.description %></p>
        <% if @reviews.blank? %>
          <h2>No review yet, would you like to be first?</h2>
          <%= link_to "write a review", new_movie_review_path(@movie), class: "btn btn-danger" %>
        <% else %>
          <% @reviews.each do |review| %>
            <div id="reviews">
              <div class="star-rating" data-score= <%= review.rating %> ></div>
                  <p class="pad"><%= review.comment %></p>
                  <p>Reviewd By (<%= review.user.email %>)</p>
          <% end %>
        <% end %>
             </div>
      </div>
    </div>
  </div>
</div>
<% if current_user.admin? %>
  <%= link_to 'Edit Movie', edit_movie_path(@movie) %>
<% end %>

  <%= link_to "Home", movies_path %>


 

 <script>
   $('.star-rating').raty({
    path: '/assets/',
    readOnly: true,
    score:function(){
      return $(this).attr('data-score');
    }
   });
 </script>
 